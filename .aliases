# -----------------------------------
# Custom Aliases
# -----------------------------------
alias vim="nvim"
alias ls="ls --color"
alias ll="ls -l --color"
alias lla="ll -A --color"
alias vei="cd \"/Volumes/External HDD/iOS Development\" && clear"
alias vew="cd \"/Volumes/External HDD/Web Development\" && clear"
alias cdd="cd ~/.dotfiles && clear"
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias hd=hide
alias sd=show
alias :q="exit"

# -----------------------------------
# Git Aliases
# -----------------------------------
alias gc="git checkout"
alias gd="git diff"
alias gs="git status"
alias gp="git push"
alias ga="git add"
alias gcm="git commit -m"
alias gwa="git worktree add"
alias gwr="git worktree remove"

# -----------------------------------
# Python Aliases
# -----------------------------------
alias python="python3"
alias pip="pip3"
